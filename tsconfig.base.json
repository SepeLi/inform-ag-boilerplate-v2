{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@inform-ag-boilerplate-v2/procedures": ["libs/procedures/src/index.ts"],
      "@inform-ag-boilerplate-v2/server": ["libs/server/src/index.ts"],
      "@inform-ag-boilerplate-v2/server/*": ["libs/server/src/*"],
      "@inform-ag-boilerplate-v2/ui": ["libs/ui/src/index.ts"],
      "@inform-ag-boilerplate-v2/ui/*": ["libs/ui/src/*"],
      "@inform-ag-boilerplate-v2/utils": ["libs/utils/src/index.ts"]
    }
  }
}
